{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ses-coe.local/schemas/agent-experiment.schema.json",
  "title": "Golden Profile Experiment Variant",
  "type": "object",
  "required": ["id", "kind", "version", "status", "labels", "extends", "patch"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9\\-\\.]{2,80}$",
      "description": "Stable ID. Example: exp-angular19plus-signals-a"
    },
    "kind": {
      "type": "string",
      "const": "experiment",
      "description": "Document type discriminator."
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "description": "Schema version for this document."
    },
    "status": {
      "type": "string",
      "enum": ["draft", "experimental", "active", "deprecated"],
      "description": "Lifecycle state of this variant."
    },
    "labels": {
      "type": "object",
      "required": ["language", "language_version"],
      "additionalProperties": false,
      "properties": {
        "language": { "type": "string", "minLength": 1 },
        "language_version": { "type": "string", "minLength": 1 },
        "framework": { "type": "string" },
        "framework_version": { "type": "string" },
        "runtime": { "type": "string" },
        "domain": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        },
        "constraint": {
          "type": "array",
          "items": { "type": "string" },
          "uniqueItems": true
        }
      },
      "description": "Structured labels for filtering, applicability and aggregation."
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "uniqueItems": true,
      "description": "Free-form tags (non-aggregating hints)."
    },
    "extends": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9_\\-\\/\\.]+$"
      },
      "description": "Base ruleset IDs or paths to inherit from. Example: rulesets/framework/angular-v19-plus.yaml"
    },
    "hypothesis": {
      "type": "string",
      "minLength": 1,
      "maxLength": 400,
      "description": "Human-readable hypothesis for HITL."
    },
    "scope": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "goal_dimensions": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["Safety", "ChangeRisk", "Explainability", "Verification", "Maintainability"]
          },
          "uniqueItems": true
        },
        "timebox_days": { "type": "integer", "minimum": 1, "maximum": 120 },
        "min_samples": { "type": "integer", "minimum": 1, "maximum": 2000 }
      },
      "description": "Optional experiment configuration for dashboards."
    },
    "patch": {
      "type": "object",
      "required": ["operations"],
      "additionalProperties": false,
      "properties": {
        "operations": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/operation" }
        }
      },
      "description": "Only deltas. Never copy entire rulesets here."
    }
  },
  "$defs": {
    "operation": {
      "type": "object",
      "required": ["op", "target"],
      "additionalProperties": false,
      "properties": {
        "op": {
          "type": "string",
          "enum": ["add", "remove", "replace", "merge", "set_param"]
        },
        "target": {
          "type": "string",
          "pattern": "^(ruleset|rulesets|metrics|templates|checklists|commands)\\.[a-zA-Z0-9_\\-\\.\\/]+$",
          "description": "Component address. Example: rulesets.framework.angular.coding.prefer"
        },
        "component_id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9\\-\\.]{2,120}$",
          "description": "Stable ID of the smallest unit (RuleItem/TemplateSection/ChecklistItem)."
        },
        "value": {
          "description": "Payload for the operation. Type depends on op/target."
        },
        "condition": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "when_labels": {
              "type": "object",
              "additionalProperties": { "type": "string" },
              "description": "Conditional activation by labels."
            }
          }
        },
        "expected_effect": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "Safety": { "type": "number" },
            "ChangeRisk": { "type": "number" },
            "Explainability": { "type": "number" },
            "Verification": { "type": "number" },
            "Maintainability": { "type": "number" }
          },
          "description": "Optional prior until enough empirical data exists."
        },
        "notes": {
          "type": "string",
          "maxLength": 400
        }
      }
    }
  }
}
